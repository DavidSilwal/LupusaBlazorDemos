@page "/fetchdata"


<h2>Open todos</h2>

<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th>N</th>
            <th>OpenDate</th>
            <th>Name</th>
            <th>Comment</th>
            <th>Importancy</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ProjectUpdate in LocalData.ProjectUpdates_List.Where(x => x.Done == false).OrderByDescending(x => x.CloseDate))
        {
            <tr>
                <td>@ProjectUpdate.N</td>
                <td>@ProjectUpdate.OpenDate.ToString("MM/dd/yyyy hh:mm:ss")</td>
                <td>@ProjectUpdate.Name</td>
                <td>@ProjectUpdate.Comment</td>
                <td>@ProjectUpdate.Importancy</td>
            </tr>
        }
    </tbody>
</table>



